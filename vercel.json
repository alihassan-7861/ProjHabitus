{
  "version": 2,

  "buildCommand": "pip install -r requirements.txt && python3.9 manage.py collectstatic --noinput",

  "builds": [
    {
      "src": "Habitus/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Habitus/wsgi.py"
    }
  ]
}
